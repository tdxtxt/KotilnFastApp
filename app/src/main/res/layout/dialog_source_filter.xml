<?xml version="1.0" encoding="utf-8"?>
<com.baselib.ui.view.container.RatioRoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:orientation="vertical"
    android:background="@color/white_ffffff"
    app:rTopRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_ffffff"
        android:paddingTop="20dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="盘点范围(20/100)"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/_16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingStart="12dp"
            android:layout_height="wrap_content"
            android:text="注:（待盘数量/全部）"
            android:textColor="@color/black_999999"
            android:textSize="@dimen/_12sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_close_24"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerDong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@color/white_f3f5f7"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="4"
            tools:listitem="@layout/item_dong" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerFoor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white_ffffff"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="12"
            tools:listitem="@layout/item_foor" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerRoom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white_ffffff"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="8"
            tools:listitem="@layout/item_room" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_ffffff"
        android:orientation="horizontal"
        android:paddingStart="27dp"
        android:paddingTop="7dp"
        android:paddingEnd="27dp"
        android:paddingBottom="7dp">

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <top.androidman.SuperButton
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            app:background_normalColor="@color/white_ffffff"
            app:border_color="@color/blue_2981ff"
            app:border_width="1dp"
            app:corner="40dp"
            app:open_pressed_effect="true"
            app:text="重置"
            app:textColor="@color/blue_2981ff"
            app:textSize="@dimen/_16sp" />

        <top.androidman.SuperButton
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:paddingTop="3dp"
            android:paddingEnd="5dp"
            android:paddingBottom="3dp"
            app:background_normalColor="@color/blue_2981ff"
            app:border_width="1dp"
            app:corner="40dp"
            app:open_pressed_effect="true"
            app:text="确定"
            app:textColor="@color/white_ffffff"
            app:textSize="@dimen/_16sp" />
    </LinearLayout>

</com.baselib.ui.view.container.RatioRoundLinearLayout>