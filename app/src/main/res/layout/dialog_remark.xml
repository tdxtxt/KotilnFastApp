<?xml version="1.0" encoding="utf-8"?>
<com.baselib.ui.view.container.RatioRoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="@color/white_ffffff"
    app:rTopRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="12dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_close_24"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="资产状态"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/_14sp"/>

    <Spinner
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_stroke_d9d9d9"
        android:entries="@array/array_source_status" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加备注"
        android:layout_marginTop="20dp"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/_14sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:paddingStart="12dp"
        android:layout_marginTop="20dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:gravity="top"
        android:paddingBottom="6dp"
        android:maxLength="500"
        android:textColor="@color/black_666666"
        android:textSize="@dimen/_15sp"
        android:hint="请输入备注内容"
        android:background="@drawable/shape_stroke_d9d9d9"/>

    <top.androidman.SuperButton
        android:id="@+id/btn_next"
        style="@style/CommButtonStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"
        app:text="确定"
        android:layout_marginBottom="25dp"/>

</com.baselib.ui.view.container.RatioRoundLinearLayout>