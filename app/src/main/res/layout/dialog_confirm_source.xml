<?xml version="1.0" encoding="utf-8"?>
<com.baselib.ui.view.container.RatioRoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_ffffff"
    android:orientation="vertical"
    android:padding="12dp"
    app:rRadius="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否确认结束盘点？"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/_16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0\n全部"
            android:textColor="@color/black_999999"
            android:textSize="@dimen/_16sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/purple_9829ff"
            android:text="0\n待盘"
            android:textSize="@dimen/_16sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/green_09bb07"
            android:text="0\n已盘"
            android:textSize="@dimen/_16sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">
        <Space
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/red_ff852b"
            android:text="0\n盘盈"
            android:textSize="@dimen/_16sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/red_f5222d"
            android:text="0\n盘亏"
            android:textSize="@dimen/_16sp"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:orientation="horizontal">
        <top.androidman.SuperButton
            android:id="@+id/btn_start"
            android:layout_gravity="right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            app:border_width="1dp"
            app:open_pressed_effect="true"
            app:border_color="@color/blue_2981ff"
            app:corner="40dp"
            app:textColor="@color/blue_2981ff"
            app:background_normalColor="@color/white_ffffff"
            app:textSize="@dimen/_16sp"
            app:text="取消"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>

        <top.androidman.SuperButton
            android:id="@+id/btn_end"
            android:layout_gravity="right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            app:border_width="1dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            app:open_pressed_effect="true"
            app:corner="40dp"
            app:textColor="@color/white_ffffff"
            app:background_normalColor="@color/blue_2981ff"
            app:textSize="@dimen/_16sp"
            app:text="确定"/>
    </LinearLayout>

</com.baselib.ui.view.container.RatioRoundLinearLayout>