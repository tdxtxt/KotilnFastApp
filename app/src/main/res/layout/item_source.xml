<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white_ffffff"
    android:layout_marginTop="12dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp"
    app:contentPadding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.fastdev.ui.view.HookCheckBox
            android:id="@+id/checkbox"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            app:hcb_check_circle_color="@color/blue_2981ff"
            app:hcb_check_hook_color="@color/white_ffffff"
            app:hcb_is_check="false"
            app:hcb_enable="false"
            app:hcb_style="hollow_out"
            app:hcb_uncheck_circle_color="@color/black_999999"
            app:hcb_uncheck_hook_color="@color/white_ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/_15sp"
                    tools:text="桌子" />

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black_999999"
                    android:textSize="@dimen/_12sp"
                    tools:text="20210926002" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green_09bb07"
                    android:textSize="@dimen/_13sp"
                    android:layout_marginEnd="3dp"
                    tools:text="已盘" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="资产类型"
                    android:textColor="@color/black_999999"
                    android:textSize="@dimen/_12sp" />

                <TextView
                    android:id="@+id/tv_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/_12sp"
                    tools:text="家居" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="规格型号"
                    android:textColor="@color/black_999999"
                    android:textSize="@dimen/_12sp" />

                <TextView
                    android:id="@+id/tv_specs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/_12sp"
                    tools:text="大号" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="存放地址"
                    android:textColor="@color/black_999999"
                    android:textSize="@dimen/_12sp" />

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/_12sp"
                    tools:text="万科城三期 1栋2楼101房间" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="备&#12288;&#12288;注"
                    android:textColor="@color/black_999999"
                    android:textSize="@dimen/_12sp" />

                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/_12sp"
                    tools:text="备注内容水水水水水水水水" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <top.androidman.SuperButton
        android:id="@+id/btn_remark"
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:border_width="1dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:open_pressed_effect="true"
        app:border_color="@color/blue_2981ff"
        app:corner="40dp"
        app:textColor="@color/blue_2981ff"
        app:background_normalColor="@color/white_ffffff"
        app:textSize="@dimen/_12sp"
        app:text="+备注"/>

</androidx.cardview.widget.CardView>