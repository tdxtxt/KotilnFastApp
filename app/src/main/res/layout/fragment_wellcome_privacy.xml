<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_wellcome_privacy">

    <com.baselib.ui.view.container.RatioRoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/white_ffffff"
        android:orientation="vertical"
        android:text="@string/privacy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rRadius="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="用户协议和隐私条款"
            android:textColor="#ff047ba5"
            android:textSize="15dp" />

        <View style="@style/line_horizontal_padding_15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎您使用护肝药友汇！"
            android:textColor="#ff333333"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请充分阅读："
            android:textColor="#ff666666"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_privacy_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="《用户协议》"
            android:textColor="#ff047ba5"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="12dp"
            android:textSize="15dp"
            android:background="@drawable/white_round_rect_8dp_f8f8f8"/>

        <TextView
            android:id="@+id/tv_privacy_ys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="《隐私条款》"
            android:textColor="#ff047ba5"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:textSize="15dp"
            android:background="@drawable/white_round_rect_8dp_f8f8f8"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="协议是由用户（以下可称“用户”或“您”）与我司就所提供的产品及服务所订立的协议。如果您进入我司或用户登录页面，确认已经阅读、同意本协议的条款并完成登录，或者通过其他任何方式获得和使用我司所提供的产品和服务，则视为您已经详细阅读了本协议的内容，同意遵守本协议的约定。"
            android:textColor="#ff666666"
            android:textSize="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="12dp"
                android:text="不同意"
                android:gravity="center"
                android:background="#f8f8f8"
                android:textColor="#999999"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/tv_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="12dp"
                android:text="同意"
                android:gravity="center"
                android:textColor="@color/white_ffffff"
                android:background="#047BA5"
                android:textSize="15dp" />
        </LinearLayout>

    </com.baselib.ui.view.container.RatioRoundLinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>